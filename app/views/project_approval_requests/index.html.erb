<h1>Project Approval Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Notes</th>
      <th>Status</th>
      <th>Requested On</th>
      <th colspan="2">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @project_approval_requests.each do |project_approval_request| %>
      <tr>
        <td><%= project_approval_request.user.name %></td>
        <td><%= project_approval_request.name %></td>
        <td><%= project_approval_request.notes.html_safe %></td>
        <td><%= status_label(project_approval_request.status) %></td>
        <td><%= project_approval_request.created_at.strftime('%D') %></td>
        <td><%= link_to verb(project_approval_request.user_id, current_user.id), edit_project_approval_request_path(project_approval_request) ,"data-remote" => true , "data-toggle" => "modal", "data-target" => "#myModal" %></td>
        <td><%= link_to 'Destroy', project_approval_request, method: :delete, data: { confirm: 'Are you sure?' } ,"data-remote" => true , "data-toggle" => "modal", "data-target" => "#myModal" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project Approval Request', new_project_approval_request_path ,"data-remote" => true , "data-toggle" => "modal", "data-target" => "#myModal" %>
