<p id="notice"><%= notice %></p>

<h1>Inventory Item Units</h1>

<table>
  <thead>
    <tr>
      <th>Inventory item</th>
      <th>Checked out</th>
      <th>Checked in</th>
      <th>Checked out by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventory_item_units.each do |inventory_item_unit| %>
      <tr>
        <td><%= inventory_item_unit.inventory_item %></td>
        <td><%= inventory_item_unit.checked_out %></td>
        <td><%= inventory_item_unit.checked_in %></td>
        <td><%= inventory_item_unit.checked_out_by %></td>
        <td><%= link_to 'Show', inventory_item_unit %></td>
        <td><%= link_to 'Edit', edit_inventory_item_unit_path(inventory_item_unit) %></td>
        <td><%= link_to 'Destroy', inventory_item_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

