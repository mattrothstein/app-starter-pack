<%- model_class = InventoryItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:inventory_location_id) %>:</strong></dt>
  <dd><%= @inventory_item.inventory_location.name.titleize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @inventory_item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @inventory_item.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit_of_measurement) %>:</strong></dt>
  <dd><%= @inventory_item.unit_of_measurement %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              inventory_location_inventory_items_path(@inventory_item.inventory_location), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_inventory_location_inventory_item_path(@inventory_item.inventory_location,@inventory_item), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              inventory_location_inventory_item_path(@inventory_item.inventory_location, @inventory_item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<br>
<br>


<%= image_tag("/barcodes/barcode_#{@inventory_item.id.to_s}.png") %><br>
