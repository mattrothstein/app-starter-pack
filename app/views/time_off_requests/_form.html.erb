<%= form_for(@time_off_request, :remote=> true) do |f| %>
  <% if @time_off_request.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@time_off_request.errors.count, "error") %> prohibited this request from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @time_off_request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="alert alert-info alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <span>If only requesting one day please select the same date for both start and end date.</span>
  </div>
  <div class=" form-group input-group input-daterange">
    <%= f.text_field :start_date, value: format_date(@time_off_request.start_date), class:"form-control", placeholder: "Start Date", "data-provide" => 'datepicker' %>
    <div class="input-group-addon">to</div>
    <%= f.text_field :end_date, value: format_date(@time_off_request.end_date), class:"form-control", placeholder: "End Date", "data-provide" => 'datepicker' %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-default"%>
  </div>
<% end %>

<script>
  $('.input-daterange input').datepicker({
    autoclose: true,
    toggleActive: true
  });
</script>
