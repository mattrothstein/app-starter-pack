<div id="flash-message"></div>
<%= form_tag(select_item_path(@inventory_location.id), method: 'get', remote: true ) do %>
  <div class="container col-md-12">
    <div class="row">
      <div class="form-group col-md-10">
        <%= text_field_tag(:item_id, "",placeholder: "Add Item", class: "form-control", autofocus: true) %>
      </div>
      <div class="form-group col-md-2">
        <%= submit_tag("Add",class:"btn btn-primary") %>
      </div>
    </div>
  </div>
<% end %>
<%= form_tag checkout_items_path, method: 'post' do %>
  <div id="checkout-items" class="container col-md-12">
    <%=hidden_field_tag :inventory_location_id , @location%>

  </div>
  <div class="container col-md-12">
    <div class="row">
  <div id="checkout" class="form-group hidden" style="margin-top:35px;">
    <%= submit_tag("Checkout",class:"col-md-12 btn btn-success") %>
  </div>
  </div>
    </div>
    <div style="clear:both;"></div>
<% end %>
