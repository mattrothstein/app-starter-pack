<% flash.each do |type, message| %>
	<% unless type == "timedout" %>
		<div class="row flash">
		  <div class="alert <%= bootstrap_class_for(type) %> fade in col-md-4 col-md-offset-4">
		    <button class="close" data-dismiss="alert">Ã—</button>
		    <%= message %>
		  </div>
		</div>
	<% end %>
<% end %>

<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('.flash').remove();
  }, 9000);
 })
</script>
