<tr>
  <td><%= @purchase_order_request.user.name %></td>
  <td><%= @purchase_order_request.name %></td>
  <td><%= @purchase_order_request.notes.html_safe %></td>
  <td><%= number_to_currency(purchase_order_request.price_in_dollars) %></td>
  <td><%= status_label(@purchase_order_request.status) %></td>
  <td><%= @purchase_order_request.created_at.strftime('%D') %></td>
  <td><%= link_to verb(@purchase_order_request.user_id, current_user.id), edit_purchase_order_request_path(@purchase_order_request) ,"data-remote" => true , "data-toggle" => "modal", "data-target" => "#myModal" %></td>
  <td><%= link_to 'Destroy', @purchase_order_request, method: :delete, data: { confirm: 'Are you sure?' } ,"data-remote" => true , "data-toggle" => "modal", "data-target" => "#myModal" %></td>
</tr>
